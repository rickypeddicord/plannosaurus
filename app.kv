<WindowManager>:
    id: screen_manager


########################
#### INITIAL SCREEN ####
########################

    Screen:
        name: "filler"
    
######################
#### LOGIN SCREEN ####
######################

		
    Screen:
        name: "login_sc"
        
        MDCard:
            size_hint: None, None
            size: 300,470
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: 25
            spacing: 25
            orientation: 'vertical'
        
            MDLabel:
                id: welcome_label
                text: "Login/Register"
                font_size: 30
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15
                
            MDTextFieldRound:
                id: user
                hint_text: 'email'
                icon_right: 'account'
                size_hint_x: None
                width: 200
                font_size: 18
                pos_hint: {"center_x": 0.5}
            
            MDTextFieldRound:
                id: password
                hint_text: 'password'
                icon_right: 'eye-off'
                size_hint_x: None
                width: 200
                font_size: 18
                pos_hint: {"center_x": 0.5}
                password: True
                
            MDRoundFlatButton:
                text: "LOGIN"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_press: screen_manager.current = root.init_load(root) if app.login() == 1 else "login_sc"

            MDRoundFlatButton:
                text: "CLEAR"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_press: app.clear()

            MDRoundFlatButton:
                text: "REGISTER"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_press: screen_manager.current = "reg"

            Widget:
                size_hint_y: None
                height: 8 

                 
################################
##### OVERVIEW MAIN SCREEN #####
################################

    Screen:
        name: "main_sc"

        TabbedPanel:
            do_default_tab: False
            tab_pos: 'right_top'
			background_color: [0, 0, 0, 0]
			
			
##################################
##### TAB FOR OVERVIEW/TODAY #####
##################################

            TabbedPanelItem:
                text: "Today"
                #background_color: [66,245,141,0]
				#text_color_normal: [1,1,1,1]
                FloatLayout:
                    id: float
					MDTextButton:
						text: "<<<"
						font_size: 12
						pos_hint: {"x": .05, "y": .95}
						on_press: app.left_cal()
                
					MDTextButton:
						text: ">>>"
						font_size: 12
						pos_hint: {"x": .85, "y": .95}
						on_press: app.right_cal()


					MDIconButton:
						icon: 'calendar'
						icon_size: "22sp"
						on_press: app.pick_date()
						pos_hint: {"x": .55, "y": .83}
					MDTextButton:
						text: "Sun"
						font_size: 16
						pos_hint: {"x": .15, "y": .95}

					MDTextButton:
						text: "Mon"
						font_size: 16
						pos_hint: {"x": .25, "y": .95}

					MDTextButton:
						text: "Tue"
						font_size: 16
						pos_hint: {"x": .35, "y": .95}

					MDTextButton:
						text: "Wed"
						font_size: 16
						pos_hint: {"x": .45, "y": 0.95}

					MDTextButton:
						text: "Thu"
						font_size: 16
						pos_hint: {"x": .55, "y": 0.95}

					MDTextButton:
						text: "Fri"
						font_size: 16
						pos_hint: {"x": 0.65, "y": 0.95}

					MDTextButton:
						text: "Sat"
						font_size: 16
						pos_hint: {"x": .75, "y": 0.95}

					MDTextButton:
						id: day1
						text: ""
						markup: True
						font_size: 16
						pos_hint: {"x": .155, "y": 0.91}
						on_press: app.current_day(self)

					MDTextButton:
						id: day2
						text: ""
						markup: True
						font_size: 16
						pos_hint: {"x": .26, "y": 0.91}
						on_press: app.current_day(self)

					MDTextButton:
						id: day3
						text: ""
						markup: True
						font_size: 16
						pos_hint: {"x": .36, "y": 0.91}
						on_press: app.current_day(self)

					MDTextButton:
						id: day4
						text: ""
						markup: True
						font_size: 16
						pos_hint: {"x": .46, "y": 0.91}
						on_press: app.current_day(self)

					MDTextButton:
						id: day5
						text: ""
						markup: True
						font_size: 16
						pos_hint: {"x": .56, "y": 0.91}
						on_press: app.current_day(self)

					MDTextButton:
						id: day6
						text: ""
						markup: True
						font_size: 16
						pos_hint: {"x": 0.65, "y": 0.91}
						on_press: app.current_day(self)

					MDTextButton:
						id: day7
						text: ""
						markup: True
						font_size: 16
						pos_hint: {"x": .755, "y": 0.91}
						on_press: app.current_day(self)


                    MDLabel:
                        text: "OVERVIEW"
						font_size: 30
                        pos_hint: {"x": .37, "center_y": .87}
                    MDTextField:
                        id: contentEventMain
                        multiline: True
                        on_text: app.contentEvent = self.text
                        hint_text: "Events:"
                        color_mode: 'custom'
                        helper_text_mode: "on_focus"
                        mode: "fill"
                        fill_color:     .5,1,.5,0.6
                        #line_color_focus: .8, 0, 0, 1
                        line_color_focus: 0, 0, 0, 1
                        current_hint_text_color: 0, 0, 0, 1
                        size_hint: (.95, .43)
                        font_size: '15'
                        pos_hint: {'center_x': .5, 'y': .40}    
                        disabled: True
                    MDFloatingActionButton:
						id: addTask
						pos_hint: {"top":.5, "right":.97}
						icon: 'pencil'
						on_release: screen_manager.current = "AddToDo"
					
					MDTextField:
                        id: contentTODOMain
                        multiline: True
                        hint_text: "To-Do:"
                        color_mode: 'custom'
                        helper_text_mode: "on_focus"
                        mode: "fill"
                        fill_color:     .5,.5,.8,0.6
                        #line_color_focus: .8, 0, 0, 1
                        line_color_focus: 0, 0, 0, 1
                        current_hint_text_color: 0, 0, 0, 1
                        size_hint: (.95, .3)
                        font_size: '15'
                        pos_hint: {'center_x': .5, 'y': .05}    
                        disabled: True
					MDFloatingActionButton:
						id: addToDo
						pos_hint: {"top":.15, "right":.97}
						icon: 'pencil'
						on_release: app.show_todolist_dialog()
							#screen_manager.current = "AddToDo2"
					ScrollView:
						pos_hint: {'center_y': .2, 'center_x': .27}
						size_hint: .5, .2
						MDList:
							id: container
					ScrollView:
						pos_hint: {'center_y': .6, 'center_x': .27}
						size_hint: .5, .4
						MDList:
							id: eventContainer
					MDSwiper:
                        height: 40
                        id: listSwiper
                        MDSwiperItem:
                            id: listItem
##############
## LIST TAB ##
##############
   

            TabbedPanelItem:
                text: "Lists"
                id: listtab
                FloatLayout:
                    id: list
                    MDTextFieldRound:
                        id: ToDoList  
                        hint_text: 'To Do List:'
                        pos_hint: { 'center_x':.35, 'center_y': .95}
                        size_hint_x: None
                        width: 250
            
                    MDRoundFlatButton:
                        id:ToDoButt
                        text:"Add"
                        pos_hint: {'center_x':.65, 'center_y':.95}
                        #on_release: root.todo_press(root)  
                        # size_hint: None    

###########################
### REGISTRATION SCREEN ###  
###########################       
            
    Screen:
        name: "reg"
        MDCard:
            size_hint: None, None
            size: 300,470
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: 25
            spacing: 25
            orientation: 'vertical'
            
            MDLabel:
                text: "REGISTRATION:"
                pos_hint: {"center_x": 0.6, "center_y": 0.2}
                font_size: 30
                bold: True

            MDTextFieldRound:
                id: firstName
                hint_text: "First Name"
                helper_text: ""
                pos_hint: {"center_x": 0.5, "center_y": 0.9}
                padding: 25
                spacing: 25
                width: 200
                normal_color: app.theme_cls.accent_color
                color_active: 1, 0, 1, 1
                helper_text_mode: "on_focus"

            MDTextFieldRound:
                id: lastName
                hint_text: "Last Name"
                helper_text: ""
                pos_hint: {"center_y": 0.8}
                width: 200
                normal_color: app.theme_cls.accent_color
                color_active: 1, 0, 1, 1
                helper_text_mode: "on_focus"

            MDTextFieldRound:
                id: emailPrompt
                hint_text: "Email"
                helper_text: ""
                pos_hint: {"center_y": 0.7}
                width: 200
                icon_left: 'email'
                normal_color: app.theme_cls.accent_color
                color_active: 1, 0, 1, 1
                helper_text_mode: "on_focus"

            MDTextFieldRound:
                id: enterPass
                hint_text: "Password:"
                helper_text: ""
                pos_hint: {"center_y": 0.6}
                icon_left: 'key-variant'
                icon_right: 'eye-off'
                width: 200
                normal_color: app.theme_cls.accent_color
                color_active: 1, 0, 1, 1
                password: True
                helper_text_mode: "on_focus"

            MDTextFieldRound:
                id: passReEnter
                hint_text: "Re-enter Password:"
                pos_hint: {"center_y": 0.5}
                helper_text: "Confirm Password" if passReEnter.text=='' else "Passwords do not match" if passReEnter.text!=enterPass.text else "Passwords Match"
                helper_text_mode: "on_focus" if passReEnter.text=='' else "on_error" if passReEnter.text!=enterPass.text else "on_focus"  
                error : False if passReEnter.text=='' else True if passReEnter.text!=enterPass.text else False
                width: 200
                icon_left: 'key-variant'
                icon_right: 'eye-off'
                normal_color: app.theme_cls.accent_color
                color_active: 1, 0, 1, 1
                password: True
                
            MDRoundFlatButton:
                text: "SUBMIT"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_press: app.register()
			
			MDRoundFlatButton:
                text: "BACK"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_press: screen_manager.current = "login_sc"
		
###################################
#### SCREEN TO ADD TIME EVENTS ####
###################################

	Screen:
        name: "AddToDo"
		MDLabel:
			text: "Today's Events:"
			pos_hint: {"center_x": 0.52, "center_y": .97}

		MDTextField:
			id: contentEvent
			multiline: True
			on_text: app.contentEvent = self.text
			hint_text: "6AM"
			color_mode: 'custom'
			#line_color_focus: .8, 0, 0, 1
			line_color_focus: 0, 0, 0, 1
			current_hint_text_color: 0, 0, 0, 1
			size_hint: (.5, .1)
			font_size: '15'
			pos_hint: {'x': 0, 'y': .84}				
			mode: "fill"
			fill_color: 0,.5,.2,.5
		MDTextField:
			id: sevenAM
			multiline: True
			hint_text: "7AM"
