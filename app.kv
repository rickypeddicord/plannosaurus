<DialogContent>:
	orientation: "vertical"
	spacing: "10dp"
	size_hint: 1, None
	height: "130dp"
	
	GridLayout:
		rows: 1
		
		MDTextField:
			id: task_text
			hint_text: "Add To-Do"
			pos_hint: {"center_y": .4}
			max_text_length: 50
			on_text_validate: (app.add_todo(task_text, date_text.text), app.close_dialog())
			
		MDIconButton:
			icon: 'calendar'
			on_release: root.show_date_picker()
			padding: '10dp'
	MDLabel:
		spacing: '10dp'
		id: date_text
		
	BoxLayout:
		orientation: 'horizontal'
		
		MDRaisedButton:
			text: 'SAVE'
			on_release: (app.add_todo(task_text, date_text.text), app.close_todolist_dialog())
		
		MDFlatButton:
			text: 'CANCEL'
			on_release: app.close_todolist_dialog()
			

<EventItemWithCheckbox>:
    id: the_event_item
    markup: True

    LeftCheckbox:
        id: check2
		theme_text_color: "Custom"
        text_color: 0, 0, 1, 1
        on_release: 
            root.markEvent(check2, the_event_item)

    IconRightWidget:
        icon: 'trash-can-outline'
        theme_text_color: "Custom"
        text_color: 0, 0, 1, 1
        on_release:
            root.delete_event(the_event_item)

<ListItemWithCheckbox>:
    id: the_list_item
    markup: True

    LeftCheckbox:
        id: check
		theme_text_color: "Custom"
        text_color: 0, 0, 1, 1
        on_release: 
            root.mark(check, the_list_item)

    IconRightWidget:
        icon: 'trash-can-outline'
        theme_text_color: "Custom"
        text_color: 0, 0, 1, 1
        on_release:
            root.delete_item(the_list_item)
