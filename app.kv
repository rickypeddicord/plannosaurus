######################
#### LOGIN SCREEN ####
######################

		
    Screen:
        name: "login_sc"
        
        MDCard:
            size_hint: None, None
            size: 300,470
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            elevation: 10
            padding: 25
            spacing: 25
            orientation: 'vertical'
        
            MDLabel:
                id: welcome_label
                text: "Login/Register"
                font_size: 30
                halign: 'center'
                size_hint_y: None
                height: self.texture_size[1]
                padding_y: 15
                
            MDTextFieldRound:
                id: user
                hint_text: 'email'
                icon_right: 'account'
                size_hint_x: None
                width: 200
                font_size: 18
                pos_hint: {"center_x": 0.5}
            
            MDTextFieldRound:
                id: password
                hint_text: 'password'
                icon_right: 'eye-off'
                size_hint_x: None
                width: 200
                font_size: 18
                pos_hint: {"center_x": 0.5}
                password: True
                
            MDRoundFlatButton:
                text: "LOGIN"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_press: screen_manager.current = root.init_load(root) if app.login() == 1 else "login_sc"
				on_release: root.postEvents(root)

            MDRoundFlatButton:
                text: "CLEAR"
                font_size: 12
                pos_hint: {"center_x": 0.5}
                on_press: app.clear()

            MDRoundFlatButton:
                text: "REGISTER"
                font_size: 12
                pos_hint: {"center_x": 0.5}
